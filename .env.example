# Database (Multi-tenant PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/omnicore?schema=public"

# Redis (Cache + BullMQ)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Next.js
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Auth (NextAuth.js v5 / Auth.js) - AUTH_SECRET veya NEXTAUTH_SECRET
AUTH_SECRET="generate-with-openssl-rand-base64-32"
# Google OAuth (opsiyonel)
# AUTH_GOOGLE_ID=""
# AUTH_GOOGLE_SECRET=""

# Pazaryeri API anahtarları şifreleme (32 byte hex: openssl rand -hex 32)
# Production için zorunlu; yoksa development fallback kullanılır
# ENCRYPTION_KEY="your-64-char-hex-key"

# Cloudflare (optional - WAF)
CLOUDFLARE_ZONE_ID=""
CLOUDFLARE_API_TOKEN=""

# S3 Backup (optional)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="eu-west-1"
S3_BACKUP_BUCKET="omnicore-backups"

# Rate limiting (per integration)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
